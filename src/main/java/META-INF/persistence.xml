<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="vendingmachinedosPU"
        transaction-type="RESOURCE_LOCAL">
        
                    <class>co.edu.usbcali.vendingmachine.model.Compra</class>
                                <class>co.edu.usbcali.vendingmachine.model.Display</class>
                                <class>co.edu.usbcali.vendingmachine.model.Producto</class>
                          
        <properties>
            <property name="hibernate.connection.driver_class"
                value="org.postgresql.Driver" />
             <property name="hibernate.connection.url"
                    value="jdbc:postgresql://127.0.0.1:5432/vendingmachine" />
             <property name="hibernate.connection.username" value="postgres" />
             <property name="hibernate.connection.password" value="postgres" />
        </properties>
     
    </persistence-unit>
</persistence>
